@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Body Start-->
<div class="well">              
    <div class="content" align="center">
        <div class="container-fluid">
        <h1>Pazuzu Minecraft</h1>
        </div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                @if (ViewBag.Gallery != null)
                {
                    var ActiveItem = ViewBag.Gallery[0];
                    var Item1 = ViewBag.Gallery[1];
                    var Item2 = ViewBag.Gallery[2];
                    var Item3 = ViewBag.Gallery[3];
                    <div class="item active">
                        <img src="~/Content/GalleryImages/@ActiveItem.FileNameQuery" alt="Image">
                        <div class="carousel-caption">
                            <h2><a href="/Home/UserHistory/@ActiveItem.UserNameQuery"><img src="https://minotar.net/helm/@ActiveItem.UserNameQuery/150.png" width="30" Height="30" /></a>  @ActiveItem.UserNameQuery</h2>
                            <a href="/Home/Image/@ActiveItem.FileNameQuery.Substring(0, ActiveItem.FileNameQuery.Length - 4)" class="ImageLink">@ActiveItem.DescriptionQuery</a>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/GalleryImages/@Item1.FileNameQuery" alt="Image">
                        <div class="carousel-caption">
                            <h2><a href="/Home/UserHistory/@Item1.UserNameQuery"><img src="https://minotar.net/helm/@Item1.UserNameQuery/150.png" width="30" Height="30" /></a>  @Item1.UserNameQuery</h2>
                            <a href="/Home/Image/@Item1.FileNameQuery.Substring(0, Item1.FileNameQuery.Length - 4)" class="ImageLink">@Item1.DescriptionQuery</a>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/GalleryImages/@Item2.FileNameQuery" alt="Image">
                        <div class="carousel-caption">
                            <h2><a href="/Home/UserHistory/@Item2.UserNameQuery"><img src="https://minotar.net/helm/@Item2.UserNameQuery/150.png" width="30" Height="30" /></a>  @Item2.UserNameQuery</h2>
                            <a href="/Home/Image/@Item2.FileNameQuery.Substring(0, Item2.FileNameQuery.Length - 4)" class="ImageLink">@Item2.DescriptionQuery</a>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/GalleryImages/@Item3.FileNameQuery" alt="Image">
                        <div class="carousel-caption">
                            <h2><a href="/Home/UserHistory/@Item3.UserNameQuery"><img src="https://minotar.net/helm/@Item3.UserNameQuery/150.png" width="30" Height="30" /></a>  @Item3.UserNameQuery</h2>
                            <a href="/Home/Image/@Item3.FileNameQuery.Substring(0, Item3.FileNameQuery.Length - 4)" class="ImageLink">@Item3.DescriptionQuery</a>
                        </div>
                    </div>   
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div><!-- content -->
    <br /><br />    
<!--Modal Buttonn-->
<div class="wrapper">
    <button type = "button" class="btn btn-lg" data-toggle="modal" data-target="#myModal">Upload Image</button>
</div>
    
<!-- Modal --> 
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

    <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="gallerybtn" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">Upload to the Gallery</h2>
            </div>
            <div class="modal-body">
                <form action="" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="outer">
                            <label for="file">Minecraft User Name:</label>
                        </div>
                        <div class="inner">
                            <input type="text" name="UserName" id="name" />
                        </div>
                    </div>
                    <div class="form-inline">
                        <div class="form-group">
                            <div class="outer">
                                <label for="file">Image Description:</label>
                            </div>
                            <div class="inner">
                                <input type="text" name="Description" id="description" />
                            </div>
                        </div>
                        <br /><br />
                        <input type="file" name="file" id="file" />
                    </div>
                    <br />
                    <div class="form-inline">
                        <div class="form-group">
                            <input type="submit" value="Submit" />
                            <p class="help-block">Submit screencaps to the Gallery.</p>
                        </div>
                    </div>
                </form>
            </div>  <!--Modal Body-->
            
       </div> <!--Modal Content-->
    </div> <!--Modal Dialog-->
</div>
    <br />
    <br />       
    @ViewBag.Message<!--Form message-->
</div><!--End Well-->
       

